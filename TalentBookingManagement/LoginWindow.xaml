<Window x:Class="TalentManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:" Margin="10"/>
            <TextBox Name="UserIDTextBox" Width="200" Margin="10"/>

            <TextBlock Text="Password:" Margin="10"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="10"/>

            <Button Content="Login" Width="100" Margin="10" Click="LoginButton_Click"/>
            <TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Margin="10" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
